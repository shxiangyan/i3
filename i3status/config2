general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 5
        color_good = '#2f343f'
		color_degraded = '#ebcb8b'
		color_bad = '#ba5e57'
}

order += "load"
order += "disk /"
#order += "wireless wlp107s0"
order += "volume master"
order += "battery 1"
#order += "tztime local"

load {
        format = "<span>  🐎 %5min Load </span>"
}

disk "/" {
        format = "<span> 💾 %free Free </span>"
}

#wireless wlp107s0 {
#        format_up = "<span> 📶 (%quality at %essid) %ip </span>"
#        format_down = "<span> ❌ Disconnected </span>"
#}

volume master {
        format = "<span> ♪ %volume </span>"
        format_muted = "<span> 🔇 Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 1 {
	last_full_capacity = true
        format = "<span> 🔋 %status %percentage </span>"
        format_down = "No Battery"
        status_chr = "Charging"
        status_bat = "Battery"
        status_unk = "Unknown"
        status_full = "Charged"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

#tztime local {
#		format = "<span> %time </span>"
#		format_time = "🗓 %a %-d %b %H:%M"
#}


order += "wireless _first_"
order += "ethernet _first_"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}


order += "tztime local"
tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

